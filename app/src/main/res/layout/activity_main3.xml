<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/cream"
    tools:context=".MainActivity3">

    <EditText
        android:id="@+id/buyerNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nama Pembeli"
        android:padding="16dp"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/itemNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nama Barang"
        android:padding="16dp"
        android:inputType="text" />

    <EditText
        android:id="@+id/itemQuantityEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Jumlah Barang"
        android:padding="16dp"
        android:inputType="number" />

    <EditText
        android:id="@+id/itemPriceEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Harga Satuan"
        android:padding="16dp"
        android:inputType="number" />

    <EditText
        android:id="@+id/paymentEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Uang Bayar"
        android:padding="16dp"
        android:inputType="number" />

    <Button
        android:id="@+id/calculateButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:backgroundTint="@color/pastel1"
        android:text="Hitung" />

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:visibility="gone"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:paddingTop="16dp" />

    <Button
        android:id="@+id/btnHapus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/pastel1"
        android:gravity="center"
        android:text="Hapus"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnBiodata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/pastel1"
        android:gravity="center"
        android:text="About Us"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:backgroundTint="@color/black"
        android:text="Log out" />


</LinearLayout>
